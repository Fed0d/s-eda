<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RecipeViewActivity"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/back_button_card"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/backbutton"
        android:src="@drawable/back"
        android:layout_marginTop="16dp"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/back" />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/card_header_image_big"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/default_dish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="5dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image_of_a_dish" />

    <TextView
        android:id="@+id/card_title_big"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_header_image"
        android:layout_marginHorizontal="7dp"/>

    <TextView
        android:id="@+id/card_subhead_big"
        android:textSize="35sp"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_title"
        android:layout_marginHorizontal="7dp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginHorizontal="7dp"
        android:shrinkColumns="0">
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/calories"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/proteins"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/fats"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/carbohydrates"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="@string/weight"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/calories_card_big"
                android:layout_width="match_parent"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/p_card_big"
                android:layout_width="match_parent"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/f_card_big"
                android:layout_width="match_parent"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/c_card_big"
                android:layout_width="match_parent"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="17sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:text="@string/_100"
                android:padding="3dip"
                android:gravity="center"
                android:textSize="20sp"
                />
        </TableRow>
    </TableLayout>
    <include layout="@layout/ingredient_table"
        android:id="@+id/ingredient_table"
        />
    <TextView
        android:id="@+id/card_recipe_big"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="3dip"
        android:gravity="start"
        android:textSize="20sp"
        android:layout_marginHorizontal="7dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>