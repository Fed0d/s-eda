<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DishChoiceActivity">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="16dp"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/breakfast"
                android:textSize="40sp" />
            <include layout="@layout/progress_bar"
                android:id="@+id/progress_bar_breakfast"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:id="@+id/breakfast_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                >

            </androidx.recyclerview.widget.RecyclerView>
            <include layout="@layout/checked_dish_card"
                android:id="@+id/card_breakfast"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/lunch"
                android:textSize="40sp" />
            <include layout="@layout/progress_bar"
                android:id="@+id/progress_bar_lunch"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:id="@+id/lunch_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                >

            </androidx.recyclerview.widget.RecyclerView>
            <include layout="@layout/checked_dish_card"
                android:id="@+id/card_lunch"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/dinner"
                android:textSize="40sp" />
            <include layout="@layout/progress_bar"
                android:id="@+id/progress_bar_dinner"/>

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="15dp"
                android:id="@+id/dinner_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                >

            </androidx.recyclerview.widget.RecyclerView>
            <include layout="@layout/checked_dish_card"
                android:id="@+id/card_dinner"/>

            <Button
                android:layout_marginVertical="15dp"
                android:id="@+id/confirm_menu_button"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/confirm_menu"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>